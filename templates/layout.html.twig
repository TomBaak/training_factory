{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/theme_TF.css') }}">
    <link rel="stylesheet" href="{{ asset('css/overwrite.css') }}">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js"
            integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P"
            crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('img/logo.ico') }}">
{% endblock %}

{% block header %}
    <div class="container-header overflow-auto">
        <img class="float-left" src="{{ asset('img/logo.png') }}" width="10%">
        <h1 class="float-left">Training Centrum Den Haag</h1>
        <form class="float-right p-2">
            <div class="form-group">
                <input type="email" class="form-control" id="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Wachtwoord">
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-primary">Log in</button>
                <a href="#" class="btn btn-primary">Reset ww</a>
            </div>
        </form>
        <hr class="border-primary">
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
{% endblock %}
