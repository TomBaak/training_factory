{% extends "layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/theme_TF.css') }}">
    <link rel="stylesheet" href="{{ asset('css/overwrite.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('img/logo.ico') }}">
{% endblock %}

{% block header %}
    <div class="container-header">
        <img class="float-left" src="{{ asset('img/logo.png') }}" width="10%">
        <h1 class="float-left">Training Centrum Den Haag</h1>
            <div class="float-right">
                <a href="{{ path('login') }}" class="btn btn-primary">Log in</a>
            </div>
        <hr class="border-primary">
    </div>
{% endblock %}
{#TODO: Make nav items highlight when selected#}
{% block nav %}
    <div class="container-nav">
        <nav class="navbar navbar-dark navbar-expand-lg">
            <button class="navbar-toggler bg-dark" type="button" data-toggle="collapse"
                    data-target="#navbarTogglerDemo01"
                    aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            {#            TODO: Fix collapse#}
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-primary " href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('trainingen') }}">Trainings Aanbod</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Lid worden</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('rules') }}">Gedragsregels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact') }}">Locatie & Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endblock %}

{% block base_container %}
    <div class="container container-95 border m-auto p-3">
        {% block banner %}
            <div class="container-95 p-3 m-auto img_banner">
                <div class="row justify-content-center img_banner">
                    <img class="col-4" src="{{ asset('img/banner1.jpg') }}">
                    <img class="col-4" src="{{ asset('img/banner2.jpg') }}">
                    <img class="col-4" src="{{ asset('img/banner3.jpg') }}">
                </div>
            </div>
        {% endblock %}
        <div class="container w-75 border m-auto p-3">
            {% block body %}
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer class="bg-dark w-100 text-center p-2 mt-4">
        <p class="text-primary">Training Centrum Den Haag - 010 519 0532</p>
        <p class="text-white mb-0">Developed by FastDevelop 2019</p>
    </footer>
{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
            integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
            integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js"
            integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P"
            crossorigin="anonymous"></script>
{% endblock %}
