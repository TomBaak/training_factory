{% extends "layout.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/theme_TF.css') }}">
    <link rel="stylesheet" href="{{ asset('css/overwrite.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('img/logo.ico') }}">
{% endblock %}

{% block header %}
    <div class="container-header overflow-auto">
        <img class="float-left" src="{{ asset('img/logo.png') }}" width="10%">
        <h1 class="float-left">Training Centrum Den Haag</h1>
        <form class="float-right p-2">
            <div class="form-group">
                <input type="email" class="form-control" id="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="password" placeholder="Wachtwoord">
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-primary">Log in</button>
                <a href="#" class="btn btn-primary">Reset ww</a>
            </div>
        </form>
        <hr class="border-primary">
    </div>
{% endblock %}
{#TODO: Make nav items highlight when selected#}
{% block nav %}
    <div class="container-nav">
        <nav class="navbar navbar-expand-lg">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                    aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link text-primary " href="{{ path('home') }}">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('trainingen') }}">Trainings Aanbod</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Lid worden</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Gedragsregels</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact') }}">Lokatie & Contact</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
{% endblock %}

{% block footer %}
<footer class="bg-dark w-100 text-center p-2 mt-4">
    <p class="text-primary">Training Centrum Den Haag - 010 519 0532</p>
    <p class="text-white mb-0">Developed by FastDevelop 2019</p>
</footer>
{% endblock %}

