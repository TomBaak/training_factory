{% extends 'base.html.twig' %}

{% block title %}
    Deelnemers {{ lesson.training.name }} op {{ lesson.date|date('j-m-Y') }}
{% endblock %}

{% block body %}
    <h2 class="text-secondary">Deelnemers</h2>

    <table class="table w-100">
        {% for registration in lesson.registrations %}
            <tr>

                <td class="p-3"><p class="mb-0">Naam: <span
                                class="text-secondary font-weight-bold">{{ registration.member.firstname }} {{ registration.member.lastname }}</span>
                    </p></td>
                <td class="p-3"><p class="mb-0">Betaald: <span
                                class="font-weight-bold">{% if registration.payment %}<span
                                    class="text-success"><i class="far fa-check-square"></i></span><td></td>{% else %}<span
                                    class="text-danger"><i class="far fa-square text-danger"></i></span></span></p></td>
                <td class="p-3"><a href="{{ path("deelnemerPayed", {id:registration.id }) }}"
                                   class="btn btn-success ml-2">Deelnemer heeft betaald</a></td>
                {% endif %}
            </tr>
        {% endfor %}
    </table>

{% endblock %}

